# http://editorconfig.org

root = true

[*]
indent_style = space
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_size = 4
atomic = true # isort config
multi_line_output = 5
line_length = 79
combine_as_imports = true
skip = docs,.tox,env
known_first_party = stdimage,tests
known_third_party = django

[*.{rst,ini}]
indent_size = 4

[*.{yml,yaml,html,xml,xsl,json}]
indent_size = 2

[*.txt]
insert_final_newline = false
